{
    "compilerOptions": {
        "composite": true,
        "target": "ES2022",
        "lib": [
            "ES2022"
        ],
        "module": "ESNext",
        "skipLibCheck": true,
        "moduleResolution": "bundler",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "strict": true,
        "noEmit": false,
        "outDir": "./dist/main",
        "declaration": true,
        "declarationMap": true
    },
    "include": [
        "src/main/**/*",
        "vite.config.ts"
    ]
}